  <!--首页基础数据分页列表 -->
  <select id="allBaseList" parameterType="com.ys.model.request.RepairSearchReq" resultMap="componentVo">
    select e.e_id,e_workshop,e_machine,e_name,e_code,c_id,c_name,c_code
    from ys_equipment e ,ys_component c
    where c.e_id = e.e_id
